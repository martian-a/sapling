namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"

include "shared.rnc" {

	paragraph |= element p {
		paragraph.attlist,
		source.inline.content-model
	}

	entity-ref.content-model |=
		text
		
}

include "journals.rnc"


# Root Element #
start |= sources


# Elements #

link =
    source.date,
    link-ref

sources = element sources { 
	sources.attlist, 
	sources.content-model
}
	
source = element source { 
	source.attlist, 
	source.content-model
}

source.acknowledgements = element acknowledgements {
	source.acknowledgements.attlist,
	source.acknowledgements.content-model
}

source.author = element author {
	source.author.attlist,
	source.contributor.content-model
}

source.bibliography = element bibliography {
	source.bibliography.attlist,
	source.bibliography.content-model
}

source.body = element body {
	source.body.attlist,
	source.body.content-model
}

source.body-matter = element body-matter {
	source.body-matter.attlist,
	source.body-matter.content-model
}

source.chapter = element chapter {
	source.chapter.attlist,
	source.chapter.content-model
}

source.citation = element citation {
	source.citation.attlist,
	source.citation.content-model
}

source.end-matter = element end-matter {
	source.end-matter.attlist,
	source.end-matter.content-model
}

source.extract = element extract {
	source.extract.attlist,
	source.extract.content-model
}

source.front-matter = element front-matter {
	source.front-matter.attlist,
	source.front-matter.content-model
}

source.front-matter.journal = element journal {
	source.front-matter.journal.attlist,
	source.front-matter.journal.content-model
}

source.front-matter.map = element map {
	source.front-matter.map.attlist,
	source.front-matter.map.content-model
}

source.front-matter.map.sheet = element sheet {
	source.front-matter.map.sheet.attlist,
	source.front-matter.map.sheet.content-model
}

source.date |= element date {
	source.date.attlist,
	source.date.content-model
}

source.inline.bold = element bold {
	source.inline.bold.attlist,
	source.inline.content-model
}

source.inline.italic = element italic {
	source.inline.italic.attlist,
	source.inline.content-model
}

source.inline.underline = element underline {
	source.inline.underline.attlist,
	source.inline.content-model
}

source.isbn = element isbn {
	text*
}

source.location = element location {
	text*
}

source.note = element note {
	source.note.attlist,
	source.note.content-model
}

source.note.label = element label {
	source.note.label.attlist,
	source.note.label.content-model
}

source.notes = element notes {
	source.notes.attlist,
	source.notes.content-model
}

source.summary = summary

source.content-model =
	source.front-matter,
	source.body-matter?,
	source.end-matter?

source.acknowledgements.content-model =
	paragraph*

source.body.content-model =
	body-matter.content-model

source.chapter.content-model =
	body-matter.heading,
	body-matter.subheading*,
	source.body,
	source.notes?
	
source.citation.content-model =
	 mixed { 
	   (
	       bold |
	       italic
	   )*
	}

source.bibliography.content-model =
	source.citation+	

source.body-matter.content-model =
	source.body |
	source.chapter* |
	source.extract* 
	
source.contributor.content-model =
	person.name.full
	
source.date.content-model =
	text?
	
source.end-matter.content-model =
	source.notes?,
	source.bibliography?

source.extract.content-model =
	pages?,
	link?,
	(
	   source.body |
	   summary
	)
	
source.front-matter.content-model =
	title*,
	subtitle?,
	series-group.content-model,
	source.author*,
	(
		source.front-matter.generic.content-model |
		journal-ref
	),
	link?,
	source.acknowledgements*
	
source.front-matter.generic.content-model =
	publisher? &
	source.location? &
	source.isbn? &
	source.date*
	
source.front-matter.journal.content-model =
	source.front-matter.generic.content-model
	

source.front-matter.map.content-model =
	source.front-matter.map.sheet?,
	source.date?
	
source.front-matter.map.sheet.content-model =
	text*

source.inline.content-model =
	mixed { 
		entity-ref* &
		source.inline.italic* &
		source.inline.bold* &
		source.inline.underline*
	}
	
source.notes.content-model =
	source.note*
	
source.note.content-model =
	source.note.label,
	paragraph*
		
source.note.label.content-model =
	text

source.summary.content-model =
    source.inline.content-model    

sources.content-model =
	source*



# Attributes #

source.attlist =
	xml.attlist,
    attribute id { xsd:ID }

source.acknowledgements.attlist =
	xml.attlist

source.author.attlist =
	entity-ref.attlist?

source.bibliography.attlist =
	xml.attlist
	
source.body.attlist =
	xml.attlist

source.body-matter.attlist =
	xml.attlist

source.chapter.attlist =
	xml.attlist,
	attribute sequence { xsd:integer }?,
    attribute publish { xsd:boolean }?
    
source.citation.attlist =
	xml.attlist

source.date.attlist =
	date.attlist,
	attribute rel { 
		"published" | 
		"revised" | 
		"retrieved" 
	}
	
	
source.end-matter.attlist =
	xml.attlist

source.extract.attlist =
	xml.attlist,
	attribute id { xsd:string }?

source.front-matter.attlist =
	xml.attlist

source.front-matter.journal.attlist =
	xml.attlist,
	attribute type {
	   "newspaper" |
	   "journal"
	}?
	
source.front-matter.map.attlist =
	xml.attlist
	
source.front-matter.map.sheet.attlist =
	xml.attlist
	
source.inline.bold.attlist =
	xml.attlist

source.inline.italic.attlist =
	xml.attlist

source.inline.underline.attlist =
	xml.attlist

source.note.attlist =
	xml.attlist,
    attribute id { xsd:ID }

source.note.label.attlist =
	xml.attlist

source.notes.attlist =
	xml.attlist
		
sources.attlist = 
	xml.attlist	

