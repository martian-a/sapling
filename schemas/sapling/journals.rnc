namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"

include "shared.rnc" {

	entity-ref.content-model |=
		text
		
}


# Root Element #
start |= journals


# Elements #

journals = element journals { 
	journals.attlist, 
	journals.content-model
}
	
journal = element journal { 
	journal.attlist, 
	journal.content-model
}

journal.issn = element issn {
    journal.issn.attlist, 
    journal.issn.content-model
}

journal.location-ref = (
    location-ref |
    (
        element location {
           journal.location-ref.attlist?,
	       entity-ref.content-model
	   }
	)
)


# Content Models #

journal.content-model =
	title,
	publisher?,
	journal.location-ref?,
	journal.issn?

journal.issn.content-model =
	text*

journals.content-model =
	journal*



# Attributes #

journal.attlist =
	xml.attlist,
    attribute id { xsd:ID }
		
journal.issn.attlist =
    xml.attlist
		
journals.attlist = 
	xml.attlist	
	
journal.location-ref.attlist =
    (
        xml.attlist? |
        location-ref.attlist
     )
    

